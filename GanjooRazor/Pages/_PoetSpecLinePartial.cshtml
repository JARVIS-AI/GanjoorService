@model GanjooRazor.Pages._PoetSpecLinePartialModel
@{
    Layout = null;
}

<div class="ganjoor-comment" id="@(Model.Line.Id == 0 ? "comment-error" : $"line-{Model.Line.Id}")">
    @Html.Raw(Model.Line.Contents)
</div>

@if (Model.Line.Id != 0 && !Model.Line.Published)
{
    <div class="clear-both red-color">
        پیشنهاد شما پس از بررسی قابل مشاهده خواهد بود.
    </div>
}
