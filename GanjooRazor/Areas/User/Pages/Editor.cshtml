@page
@model GanjooRazor.Areas.User.Pages.EditorModel
@using DNTPersianUtils.Core
@{
    Layout = "_Layout";
    ViewData["Title"] = "ویرایشگر";
    await GanjooRazor.Utils.GanjoorSessionChecker.ApplyPermissionsToViewData(Request, Response, ViewData);
}
<h1>@ViewData["Title"]</h1>
@if (!string.IsNullOrEmpty(Model.FatalError))
{
    <p>@Model.FatalError</p>
}
else
{
    <p><a role="button" target="_blank" href="@Model.PageInformation.FullUrl" class="actionlink">@Model.PageInformation.FullTitle</a></p>

    @if (Model.PageInformation.Poem.Previous != null)
    {
            <p><a href="/User/Editor?id=@Model.PageInformation.Poem.Previous.Id">ویرایش شعر قبل</a></p>
    }
    @if (Model.PageInformation.Poem.Next != null)
    {
            <p><a href="/User/Editor?id=@Model.PageInformation.Poem.Next.Id">ویرایش شعر بعد</a></p>
    }

    if (Model.MyLastEdit != null)
    {
        <table>
            <tr>
                <td colspan="2">ویرایشهای بررسی نشدهٔ من</td>
            </tr>

            <tr>
                <td>متن اولیه</td>
                <td>تغییرات من</td>
            </tr>

            @if (Model.MyLastEdit.Title != null)
            {
                <tr>
                    <td>
                        <p style="color:red">@Model.MyLastEdit.OriginalTitle</p>
                    </td>
                    <td>
                        <p style="color:green">@Model.MyLastEdit.Title</p>
                    </td>
                </tr>
            }
            @if (Model.MyLastEdit.Rhythm != null)
            {
                <tr>
                    <td>
                        <p style="color:red">@Model.MyLastEdit.OriginalRhythm</p>
                    </td>
                    <td>
                        <p style="color:green">@Model.MyLastEdit.Rhythm</p>
                    </td>
                </tr>
            }
            @if (Model.MyLastEdit.VerseOrderText != null)
                @foreach (var verse in Model.MyLastEdit.VerseOrderText)
                {
                    <tr>
                        <td>
                            <p style="color:red">@verse.OriginalText</p>
                        </td>
                        <td>
                            <p style="color:green">@verse.Text</p>
                        </td>
                    </tr>
                }
            @if (!string.IsNullOrEmpty(Model.MyLastEdit.Note))
            {
                <tr>
                    <td>یادداشت:</td>
                    <td>
                        @Model.MyLastEdit.Note
                    </td>
                </tr>
            }

            <tr>
                <td colspan="2">
                    <a role="button" id="deletecorrections" style="cursor:pointer;width:100%;color:white;background-color:red;display:block" onclick="deletePoemCorrections(@Model.PageInformation.Poem.Id)">انصراف و حذف این ویرایش</a>
                </td>
            </tr>

        </table>
    }

    <table>
        <tr>
            <td>
                <p><strong>ویرایش متن:</strong></p>
            </td>
        </tr>
        <tr>
            <td>
                عنوان فعلی:
            </td>
        </tr>
        <tr>
            <td>
                <p id="original-0">@Model.PageInformation.Poem.Title</p>
            </td>
        </tr>
        <tr>
            <td>
                عنوان ویراستهٔ من:
            </td>
        </tr>
        <tr>
            <td>
                @if (Model.MyLastEdit != null && Model.MyLastEdit.Title != null)
                {
                    <input type="text" id="id-0" name="id-0" value="@Model.MyLastEdit.Title" size="50" oninput="editorcompare(0)" />
                    <script>
                        $(document).ready(function () {
                            editorcompare(0);
                        });
                    </script>
                }
                else
                {
                    <input type="text" id="id-0" name="id-0" value="@Model.PageInformation.Poem.Title" size="50" oninput="editorcompare(0)" />
                }
            </td>
        </tr>
        <tr>
            <td>
                تغییرات:
            </td>
        </tr>
        <tr>
            <td>
                <p id="compare-0">@Model.PageInformation.Poem.Title</p>
            </td>
        </tr>
        @foreach (var verse in Model.PageInformation.Poem.Verses)
        {
            <tr>
                <td>
                    بیت @Model.GetVerseCoupletNumber(verse).ToPersianNumbers()
                </td>
            </tr>
            <tr>
                <td>
                    مصرع @verse.VOrder.ToPersianNumbers()
                </td>
            </tr>
            <tr>
                <td>
                    نوع: @Model.GetVersePosition(verse)
                </td>
            </tr>
            <tr>
                <td>
                    متن فعلی:
                </td>
            </tr>
            <tr>
                <td>
                    <p id="original-@($"{verse.VOrder}")">@verse.Text</p>
                </td>
            </tr>
            <tr>
                <td>
                    ویراستهٔ من:
                </td>
            </tr>
            <tr>
                <td>
                    @if (Model.MyLastEdit != null && Model.MyLastEdit.VerseOrderText != null && Model.MyLastEdit.VerseOrderText.Where(v => v.VORder == verse.VOrder).Any())
                    {
                        <input type="text" id="id-@($"{verse.VOrder}")" name="name-@($"{verse.VOrder}")" value="@Model.MyLastEdit.VerseOrderText.Where(v => v.VORder == verse.VOrder).First().Text" size="50" oninput="editorcompare(@verse.VOrder)" />
                        <script>
                            $(document).ready(function () {
                                editorcompare(@verse.VOrder);
                            });
                        </script>
                    }
                    else
                    {
                        <input type="text" id="id-@($"{verse.VOrder}")" name="name-@($"{verse.VOrder}")" value="@verse.Text" size="50" oninput="editorcompare(@verse.VOrder)" />
                    }
                </td>
            </tr>
            <tr>
                <td>
                    تغییرات:
                </td>
            </tr>
            <tr>
                <td>
                    <p id="compare-@($"{verse.VOrder}")">@verse.Text</p>
                </td>
            </tr>

        }

        <tr>
            <td>
                وزن فعلی:
            </td>
        </tr>
        <tr>
            <td>
                <p id="rhythm-old">@(Model.PageInformation.Poem.GanjoorMetre == null ? "" : Model.PageInformation.Poem.GanjoorMetre.Rhythm)</p>
            </td>
        </tr>
        <tr>
            <td>
                وزن ویراستهٔ من:
            </td>
        </tr>
        <tr>
            <td>
                @if (Model.MyLastEdit != null && Model.MyLastEdit.Rhythm != null)
                {
                    <input type="text" id="rhythm-new" name="rhythm-new" value="@Model.MyLastEdit.Rhythm" size="50" list="rythms" />

                }
                else
                {
                    <input type="text" id="rhythm-new" name="rhythm-new" value="@(Model.PageInformation.Poem.GanjoorMetre == null ? "" : Model.PageInformation.Poem.GanjoorMetre.Rhythm)" size="50" list="rythms" />
                }
                <datalist id="rythms">
                    @if (Model.Rhythms != null)
                        @foreach (var rhythm in Model.Rhythms)
                        {
                            <option value="@rhythm.Rhythm">@rhythm.Rhythm</option>
                        }
                </datalist>
            </td>
        </tr>
        <tr>
            <td>
                توضیح این ویرایش:
            </td>
        </tr>

        <tr>
            <td>
                @if (Model.MyLastEdit != null && !string.IsNullOrEmpty(Model.MyLastEdit.Note))
                {
                    <input type="text" id="note" name="note" value="@Model.MyLastEdit.Note" size="50" />
                }
                else
                {
                    <input type="text" id="note" name="note" value="" size="50" />
                }
            </td>
        </tr>

        <tr>
            <td>
                <a role="button" id="savecorrections" style="cursor:pointer;width:100%;color:white;background-color:green;display:block" onclick="savePoemCorrections(@Model.PageInformation.Poem.Id, @Model.PageInformation.Poem.Verses.Length)">ذخیره</a>
            </td>
        </tr>

        <tr>
            <td><p id="saving">&nbsp;</p></td>
        </tr>

        @if (Model.PageInformation.Poem.Previous != null)
        {
            <tr>
                <td><a href="/User/Editor?id=@Model.PageInformation.Poem.Previous.Id">ویرایش شعر قبل</a></td>
            </tr>
        }
        @if (Model.PageInformation.Poem.Next != null)
        {
            <tr>
                <td><a href="/User/Editor?id=@Model.PageInformation.Poem.Next.Id">ویرایش شعر بعد</a></td>
            </tr>
        }
    </table>

}